{
  "name": "my-hive",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspace=@my-hive/shared && npm install && npm run build --workspace=@my-hive/db && npm run build --workspace=@my-hive/api && npm run build --workspace=@my-hive/web",
    "db:migrate": "node packages/db/migrate.js",
    "db:seed": "node packages/db/seed.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/leaflet": "^1.9.21",
    "leaflet": "^1.9.4",
    "react-leaflet": "^5.0.0"
  }
}
